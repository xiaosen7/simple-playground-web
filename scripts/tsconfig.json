{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2022",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["../packages/*"]
    }
  },
  "include": ["src", "bin"]
}
